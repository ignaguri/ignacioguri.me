    "version": "0.2.0",
    "configurations": [
        {
            "name": "NextJS: Client-side debug",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "NextJS: Server-side debug",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/next"
        }
    ]
}